<div class="employee-form margen-bajo ">

<div class='bienvenido'>
        <p>Trabajadores de la empresa</p>
       <p class='text-center'> <%= current_user.company.name %></p>
    </div>
 
    <h1 class='text-center'>Consultas</h1>

 <div class='table-responsive margen_abajo'>
    <table class='table table-striped table-bordered table-hover'>
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Email</th>
          <th>Telefono</th>
          <th>Consulta</th>
          <th>Mostrar</th>
          <th>Editar</th>
          <th>Eliminar</th>
          <th colspan="8"></th>
        </tr>
      </thead>

      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.name %></td>
            <td><%= contact.last_name %></td>
            <td><%= contact.email %></td>
            <td><%= contact.phone %></td>
            <td><%= contact.consult %></td>
            <td><%= link_to 'Show', contact %></td>
            <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
            <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
   </div>
   
    <br>
 <div class="employee-form">
    <%= paginate @contacts %>
    <%= link_to 'Home', homes_index_path, class:"btn btn-outline-light btn-primary text-center" %>
  </div>
   
</div>
