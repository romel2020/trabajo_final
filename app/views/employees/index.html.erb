<p id="notice"><%= notice %></p>
<div class="employee-form margen-bajo ">
        <h1>Listado Trabajador</h1>


<table class='table table-striped table-bordered table-hover '>
  <thead>
    <tr class='bg-primary text-white'>
      <th>Rut</th>
      <th>Nombre</th>
      <th>Apellido Paterno</th>
      <th>Apellido Materno</th>
      <th>Fecha de Inicio</th>
      <th>Nacionalidad</th>
      <th>Sexo</th>
      <th>Direcci√≥n</th>
      <th>Celular</th>
      <th>Telefono</th>
      <th>Email</th>
      <th>Cargas</th>
      <th>Contrato</th>
      <th>Realizar</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Borrar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% unless @contract.nil? %>
     
   
    <% @contract.each do |employee| %>
      <tr>
        <td width="2%"><%= employee.rut %></td>
        <td width="16%"><%= employee.name %></td>
        <td width="16%"><%= employee.father_name %></td>
        <td width="16%"><%= employee.mother_name %></td>
        <td width="8%"><%= employee.date_ini %></td>
        <td width="8%"><%= employee.nationality %></td>
        <td><%= employee.sexo %></td>
        <td width="16%"><%= employee.address %></td>
        <td width="6%"><%= employee.phone_fix %></td>
        <td width="6%"><%= employee.phone %></td>
        <td width="6%"><%= employee.email %></td>
        <td width="2%"><%= employee.charges %></td>
       <% if employee.laboralrelation_id.nil? %>
        <td><%= 'No tiene contrato'%></td>
        <td><%= link_to 'Contrato', new_employee_laboralrelation_path(employee) %></td>
        <%else%>
        <td><%= 'tiene contrato' %></td>
        <% end %>
        
     
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
       
    <% end %>
  </tbody>
</table>

<br>
</div>
<div class="employee-form">
